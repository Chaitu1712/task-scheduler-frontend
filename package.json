{
  "name": "task-scheduler-frontend",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "description": "A task scheduler application",
  "author": "Chaitanya",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron": "npm run build && electron ."
  },
  "dependencies": {
    "axios": "^1.7.9",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-toastify": "^11.0.2",
    "task-scheduler-frontend": "file:"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/eslint-parser": "^7.25.9",
    "@babel/preset-react": "^7.26.3",
    "concurrently": "^9.1.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.1.2",
    "next": "^15.1.2",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.example.task-scheduler",
    "productName": "Task Scheduler",
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      ".next/"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
